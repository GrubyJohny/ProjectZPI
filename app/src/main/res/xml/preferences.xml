<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:defaultValue="normal"
        android:entries="@array/map_types"
        android:entryValues="@array/categories_value"
        android:key="@string/movies_categories_key"
        android:summary="Select most prefered map type"
        android:title="Map types" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:persistent="false"
        android:title="Zoom buttons" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:persistent="false"
        android:title="Compass" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:persistent="false"
        ndroid:summary="3D view"
        android:title="Buildings" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:persistent="false" />

</PreferenceScreen>