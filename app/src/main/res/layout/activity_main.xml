<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/panelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/panel_blue2">

        <ImageButton
            android:id="@+id/circleButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_button"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/noticeButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/circleButton"
            android:background="@drawable/notice_button"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/messageButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/noticeButton"
            android:background="@drawable/notice_button"
            android:clickable="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panelLayout">

        <android.support.v4.app.FragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tabss"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/panel_tabs">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom" />

                </LinearLayout>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="1dp">

                </FrameLayout>

            </LinearLayout>

        </android.support.v4.app.FragmentTabHost>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/settingsLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:visibility="invisible">

        <fragment
            android:id="@+id/settingsFragment"
            android:name="zpi.squad.app.grouploc.SettingsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_settings" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/panelLayout"
        android:layout_marginTop="55dp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/markerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_material_light"
        android:orientation="vertical"
        android:visibility="invisible"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/titleOfMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TytuÅ‚ markera" />

            <Button
                android:id="@+id/closeMarkerButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:text="X"
                android:textSize="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/firstButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:background="@drawable/polyline" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f6f6f6" />

            <Button
                android:id="@+id/secondButton"
                android:layout_width="48dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:background="@drawable/navigation" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f6f6f6" />

            <Button
                android:id="@+id/fifthButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/share"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f6f6f6" />

            <Button
                android:id="@+id/thirdButton"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:background="@drawable/checkmark"
                android:clickable="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f6f6f6" />

            <Button
                android:id="@+id/fourthButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/delete"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
